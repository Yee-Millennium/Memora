    <TextView
        android:id="@+id/subject_order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject order"
        android:textColor="#FFFFFF"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/subject_order_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alphabetic"
        android:textColor="#AAAAAA"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/default_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default question"
        android:textColor="#FFFFFF"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/default_question_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not set"
        android:textColor="#AAAAAA" />

</LinearLayout>